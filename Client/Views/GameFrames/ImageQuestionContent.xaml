<Page x:Class="SvoyaIgraClient.Views.GameFrames.ImageQuestionContent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SvoyaIgraClient.Views.GameFrames"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ImageQuestionContent" Width="600" Height="360">

    <Grid Width="600" Height="360" Background="White">
        <Border BorderThickness="2" BorderBrush="Black">
            <Image Height="355" Margin="0" Width="400" Source="{Binding QuestionImage}"/>
        </Border>
    </Grid>
</Page>
