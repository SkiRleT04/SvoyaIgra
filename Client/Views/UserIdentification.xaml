<Page x:Class="SvoyaIgraClient.Views.UserIdentification"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SvoyaIgraClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="UserIdentification" Width="600" Height="400">

    <Grid Background="White" Margin="0,0,0,-42">
        <Label Content="Своя Игра" Margin="10,10,10,290" FontSize="72" FontWeight="Bold" FontFamily="Sylfaen" HorizontalAlignment="Center"/>
        <Button x:Name="btnLogIn" Content="Войти" Margin="100,230,100,0" VerticalAlignment="Top" Click="btnLogIn_Click" Width="400" Height="80" FontSize="36" HorizontalAlignment="Center" FontFamily="Sylfaen"/>
        <Button x:Name="btnRegister" Content="Зарегестрироваться" Margin="100,330,100,0" Click="btnRegister_Click" Width="400" FontSize="36" Height="80" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Sylfaen"/>
        <Button x:Name="btnExit" Content="Выйти" HorizontalAlignment="Center" Margin="100,430,100,0" VerticalAlignment="Top" Width="400" Height="80" FontSize="36" Click="btnExit_Click" FontFamily="Sylfaen"/>

    </Grid>
</Page>
